{
	"checks": [
		{
			"type": "AccessOrder",
				"props": {
				"severity": "WARNING",
				"modifiers": [ 
					"OVERRIDE",
					"PUBLIC_PRIVATE",
					"STATIC",
					"MACRO",
					"INLINE",
					"DYNAMIC"
				]
			}
		},
		{
			"type": "ConstantName",
			"props": {
				"severity": "WARNING",
				"format": "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$",
				"tokens": ["INLINE"]
			}
		},
		{
			"type": "EmptyLines",
			"props": {
				"severity": "WARNING",
				"max": 1
			}
		},
		{
			"type": "IndentationCharacter",
			"props": {
				"severity": "WARNING"
			}
		},
		{
			"type": "LocalVariableName",
			"props": {
				"severity": "WARNING",
				"format": "^[a-z][a-zA-Z0-9]*$"
			}
		},
		{
			"type": "MemberName",
			"props": {
				"severity": "WARNING",
				"format": "^([a-z][a-zA-Z0-9]*|ID)$",
				"tokens": [
					"CLASS",
					"TYPEDEF",
					"PUBLIC"
				]
			}
		},
		{
			"type": "MemberName",
			"props": {
				"severity": "WARNING",
				"format": "^_?[a-z][a-zA-Z0-9]*$",
				"tokens": [
					"CLASS",
					"PRIVATE"
				]
			}
		},
		{
			"type": "MemberName",
			"props": {
				"severity": "WARNING",
				"format": "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$",
				"tokens": ["ENUM"]
			}
		},
		{
			"type": "MethodName",
			"props": {
				"severity": "WARNING",
				"format": "^[a-z][a-zA-Z0-9]*$"
			}
		},
		{
			"type": "TypeName",
			"props": {
				"severity": "WARNING",
				"format": "^[A-Z]+[a-zA-Z0-9]*$"
			}
		},
		{
			"type": "Spacing",
			"props": {
				"severity": "WARNING"
			}
		}
	]
}